<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl mb-5">Decks</h1>
    <%= link_to "Add Deck", new_deck_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <% if @decks.any? %>
    <div id="decks" class="min-w-full mt-10">
      <%= render @decks %>
    </div>
  <% else %>
    <div class="text-center text-gray-600 py-4 mt-20">
      <p>No decks found.</p>
      <p class="mb-4">You can add new decks using the button below.</p>
      <%= link_to 'Add Deck', new_deck_path, class: "py-3 px-4 text-blue-600 hover:text-blue-800 font-medium rounded" %>
    </div>
  <% end %>
</div>
