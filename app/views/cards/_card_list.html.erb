<div id="cards" class="min-w-full mt-10">
  <table class="table-fixed min-w-full bg-white">
    <thead>
      <tr class="bg-gray-100">
        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-900" style="text-align: left;">Front</th>
        <th class="py-3 px-4 text-left text-sm font-semibold text-gray-900" style="text-align: left;">Back</th>
        <th class="py-3 px-2 text-left text-sm font-semibold text-gray-900" style="text-align: center;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cards.each do |card| %>
        <tr class="border-b border-gray-200">
          <td class="py-4 px-6 text-lg text-gray-900" style="width: 33%"><%= card.front %></td>
          <td class="py-4 px-6 text-lg text-gray-900" style="width: 33%"><%= card.back %></td>
          <td class="py-4 px-3" style="width: 5%"%>
            <div class="flex">
              <%= link_to "Edit", edit_card_path(card), class: "rounded-lg py-2 px-3 bg-gray-100 inline-block font-medium mr-2" %>
              <%= button_to "Delete", card_path(card), method: :delete, class: "rounded-lg py-2 px-3 bg-gray-100 inline-block font-medium" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
