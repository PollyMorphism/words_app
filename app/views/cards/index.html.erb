<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl mb-5">Cards</h1>
    <%= link_to "New card", new_card_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <% if @cards.any? %>
    <%= render "cards_list", cards: @cards %>
  <% else %>
    <%= render "shared/no_cards", deck: nil%>
  <% end %>
</div>
