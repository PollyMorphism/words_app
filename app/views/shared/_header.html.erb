<header class="bg-white border-b border-gray-200 mb-10">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <%= link_to root_path do %> 
        <%= image_tag "logo.svg", alt: "App Logo", class: "h-10 w-auto" %>
      <% end %>
      <%= link_to "Decks", decks_path, class: "text-gray-600 hover:text-gray-900"  %>
      <%= link_to "Cards", cards_path, class: "text-gray-600 hover:text-gray-900"  %>
    </div>
    <div class="flex items-center space-x-4">
      <%= link_to "Profile", profile_path, class: "text-gray-600 hover:text-gray-900"  %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-gray-600 hover:text-gray-900"  %>
    </div>
  </div>
</header>
